<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="43.2dp"
	android:gravity="center_vertical"
	android:background="#66000000">

	<ImageView
		android:id="@+id/titlebar_exit"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:gravity="center"
		android:layout_marginLeft="24dp"
		android:src="@drawable/mainly_btn_exit_selector"/>

	<TextView
		android:id="@+id/titlebar_audiences"
		style="@style/titlebar_com_btn_bg"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:gravity="center"
		android:layout_marginLeft="24dp"
		android:layout_toRightOf="@+id/titlebar_exit"
		android:text="@string/titlebar_audience_num" />

	<TextView
		android:id="@+id/titlebar_showchat"
		style="@style/titlebar_com_btn_bg"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_alignParentRight="true"
		android:layout_marginRight="25dp"
		android:gravity="center"
		android:text="隐藏聊天"
		android:visibility="gone" />

</RelativeLayout>